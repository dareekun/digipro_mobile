<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".process_inspection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:weightSum="12"
        android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:text="@string/inspection_card"
                android:textSize="30sp" />

        <TextView
            android:id="@+id/model_number_inspection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="@string/product_name"
            android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/pcs_per_box" />

                        <EditText
                            android:id="@+id/pcs_per_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:inputType="number"
                            android:hint="@string/qty"
                            android:autofillHints=""
                            android:minHeight="48sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/total_box" />

                        <EditText
                            android:id="@+id/total_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:inputType="number"
                            android:hint="@string/total_box"
                            android:autofillHints=""
                            android:minHeight="48sp"  />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lot_size"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/input_lotsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:hint="@string/lot_size"
                    android:autofillHints=""
                    android:inputType="number"
                    android:minHeight="48sp" />
                <TextView
                    android:layout_marginTop="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lot_number"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/input_lotnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:hint="@string/lot_number"
                    android:autofillHints=""
                    android:inputType="number"
                    android:minHeight="48sp" />
                <TextView
                    android:layout_marginTop="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/remark"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/input_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:inputType="number"
                    android:hint="@string/remark"
                    android:autofillHints=""
                    android:minHeight="48sp" />

                <TextView
                    android:layout_marginTop="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/judgement"
                    android:textSize="18sp" />
                <RadioGroup
                    android:id="@+id/radio_group1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radio_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/ok" />

                    <RadioButton
                        android:id="@+id/radio_ng"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/ng" />

                    <RadioButton
                        android:id="@+id/radio_hold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/hold" />
                </RadioGroup>
                <Button
                    android:layout_marginVertical="15sp"
                    android:paddingVertical="10sp"
                    android:id="@+id/process_inpection_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:minHeight="50sp"
                    android:text="@string/process" />
    </LinearLayout>
</ScrollView>